{% extends "themes/base.html.twig" %}

{% block title %}Connexion{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Nunito:ital,wght@0,200..1000;1,200..1000&display=swap" rel="stylesheet">
    <link rel="icon" href="{{ asset('build/images/logo-noya.png') }}">
{% endblock %}

{% block meta %}
    <meta name="description" content="Connectez vous.">
    <meta name="robots" content="index, follow">    
    <meta name="author" content="Noya">    
    <meta name="publisher" content="Jessica">    
{% endblock %}

{% block main %}
<div class="container my-5">
    <div class="row shadow p-4 rounded bg-white">
        <!-- Connexion -->
        <div class="col-md-6 border-end">
            <h2 class="mb-4">Déjà un compte ?</h2>

            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        Vous êtes connecté en tant que {{ app.user.userIdentifier }},
                        <a href="{{ path('app_logout') }}">Déconnexion</a>
                    </div>
                {% endif %}

                <div class="mb-3">
                    <label for="inputEmail" class="form-label">Email</label>
                    <input type="email"
                           name="email"
                           id="inputEmail"
                           class="form-control"
                           placeholder="Email"
                           value="{{ last_username }}"
                           required
                           autofocus>
                </div>

                <div class="mb-3">
                    <label for="inputPassword" class="form-label">Mot de passe</label>
                    <input type="password"
                           name="password"
                           id="inputPassword"
                           class="form-control"
                           placeholder="Mot de passe"
                           autocomplete="current-password"
                           required>
                </div>

                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                       data-controller="csrf-protection">

                <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" name="_remember_me" id="rememberMe">
                    <label class="form-check-label" for="rememberMe">
                        Se souvenir de moi
                    </label>
                </div>

                <button type="submit" class="button-connexion w-100">Se connecter</button>
            </form>
        </div>

        <!-- Inscription -->
        <div class="col-md-6 text-center d-flex flex-column justify-content-center align-items-center">
            
            <img src="{{ asset('build/images/new-noya2.png') }}" alt="new-noya2.png" class="img-fluid mb-4" style="max-width: 150px;">
            <p class="mb-4">Créez un compte pour profiter de tous nos services.</p>
            <a href="{{ path('app_register') }}" class="btn px-4 btn-white-green-hover">S'inscrire</a>
        </div>
    </div>
</div>
{% endblock %}

