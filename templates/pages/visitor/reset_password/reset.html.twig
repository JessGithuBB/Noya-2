{% extends 'themes/base.html.twig' %}

{% block description %}Réinitialisation de votre mot de passe{% endblock %}

{% block main %}
    <div class="container my-5">
        <div class="row shadow p-4 rounded bg-white">
            <div class="col-md-6 border-end">
                <h2 class="mb-4">Réinitialisez votre mot de passe</h2>

                {{ form_start(resetForm) }}
                    {{ form_row(resetForm.plainPassword) }}
                    <button class="btn btn-primary mt-3">Réinitialiser</button>
                {{ form_end(resetForm) }}
            </div>
        </div>
    </div>
{% endblock %}
