{% extends 'themes/base.html.twig' %}

{% block description %}Demande de réinitialisation de mot de passe{% endblock %}

{% block main %}
    <div class="container my-5 d-flex justify-content-center align-items-center" style="min-height: 60vh;">
        <div class="shadow p-4 rounded bg-white" style="width: 100%; max-width: 500px;">
            <h2 class="mb-4 text-center">Réinitialisez votre mot de passe</h2>

            {{ form_start(requestForm) }}

            <div class="mb-3">
                {{ form_widget(requestForm.email, {
                    'attr': {
                        'class': 'form-control',
                        'id': 'inputEmail',
                        'placeholder': 'Email',
                        'autocomplete': 'current-email',
                        'required': 'required'
                    }
                }) }}

                {{ form_errors(requestForm.email) }}
            </div>

            <button class="btn btn-primary w-100 mt-3">Envoyer le lien</button>

            {{ form_end(requestForm) }}
        </div>
    </div>
{% endblock %}
