{% extends "themes/base.html.twig" %}

{% block title %}Mon Panier{% endblock %}
{% block description %}Panier d'achat - Noya{% endblock %}

{% block main %}
{{ parent() }}

<div class="cart-page">
    {# En-tête de la page #}
    <section class="page-header container py-4 mb-4">
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="display-5 fw-bold text-dark">
                <i class="bi bi-cart3 text-success"></i> Mon Panier
            </h1>
            <a href="{{ path('app_visitor_welcome') }}" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Continuer mes achats
            </a>
        </div>
    </section>

    <div class="container pb-5">
        {% if items is empty %}
            {# Panier vide #}
            <div class="text-center py-5">
                <i class="bi bi-cart-x display-1 text-muted"></i>
                <h2 class="mt-4">Votre panier est vide</h2>
                <p class="text-muted mb-4">Découvrez nos produits et ajoutez-les à votre panier !</p>
                <div class="d-flex gap-3 justify-content-center flex-wrap">
                    <a href="{{ path('app_visitor_nouveautés_index') }}" class="btn btn-primary">
                        <i class="bi bi-sparkles"></i> Voir les nouveautés
                    </a>
                    <a href="{{ path('app_visitor_best-sellers') }}" class="btn btn-outline-primary">
                        <i class="bi bi-star"></i> Voir les best-sellers
                    </a>
                </div>
            </div>
        {% else %}
            <div class="row g-4">
                {# Liste des articles #}
                <div class="col-lg-8">
                    <div class="card border-0 shadow-sm">
                        <div class="card-header bg-white py-3">
                            <h5 class="mb-0">
                                Articles 
                                <span class="badge bg-success">{{ items|length }}</span>
                            </h5>
                        </div>
                        <div class="card-body p-0">
                            {% for item in items %}
                                <div class="cart-item p-3 p-md-4 border-bottom">
                                    <div class="row g-3 align-items-center">
                                        {# Image #}
                                        <div class="col-md-2 col-3">
                                            <img src="{{ asset('uploads/images/' ~ item.article.image) }}" 
                                                 alt="{{ item.article.name }}" 
                                                 class="img-fluid rounded"
                                                 style="max-height: 100px; object-fit: cover;">
                                        </div>
                                        
                                        {# Informations #}
                                        <div class="col-md-4 col-9">
                                            <h6 class="mb-1 fw-semibold">{{ item.article.name }}</h6>
                                            <p class="text-muted small mb-0">{{ item.article.brand }}</p>
                                            {% if item.article.quantity < 5 %}
                                                <small class="text-danger">
                                                    <i class="bi bi-exclamation-triangle"></i> Stock limité
                                                </small>
                                            {% endif %}
                                        </div>
                                        
                                        {# Prix unitaire #}
                                        <div class="col-md-2 col-4 text-center">
                                            <p class="mb-0 text-muted small">Prix unitaire</p>
                                            <p class="mb-0 fw-bold">{{ item.article.sellingPrice|number_format(2, ',', ' ') }} €</p>
                                        </div>
                                        
                                        {# Quantité #}
                                        <div class="col-md-2 col-4">
                                            <form action="{{ path('app_cart_update', {'id': item.article.id}) }}" method="post" class="d-inline">
                                                <div class="input-group input-group-sm">
                                                    <button type="button" class="btn btn-outline-secondary quantity-btn" data-action="decrease">
                                                        <i class="bi bi-dash"></i>
                                                    </button>
                                                    <input type="number" 
                                                           name="quantity" 
                                                           value="{{ item.quantity }}" 
                                                           min="1" 
                                                           max="{{ item.article.quantity }}"
                                                           class="form-control text-center quantity-input"
                                                           style="max-width: 60px;">
                                                    <button type="button" class="btn btn-outline-secondary quantity-btn" data-action="increase">
                                                        <i class="bi bi-plus"></i>
                                                    </button>
                                                </div>
                                            </form>
                                        </div>
                                        
                                        {# Sous-total et suppression #}
                                        <div class="col-md-2 col-4 text-end">
                                            <p class="mb-2 fw-bold text-success">
                                                {{ (item.article.sellingPrice * item.quantity)|number_format(2, ',', ' ') }} €
                                            </p>
                                            <a href="{{ path('app_cart_remove', {'id': item.article.id}) }}" 
                                               class="btn btn-sm btn-outline-danger"
                                               onclick="return confirm('Supprimer cet article du panier ?')">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                    
                    {# Bouton vider le panier #}
                    <div class="mt-3">
                        <a href="{{ path('app_cart_clear') }}" 
                           class="btn btn-outline-danger"
                           onclick="return confirm('Êtes-vous sûr de vouloir vider votre panier ?')">
                            <i class="bi bi-trash"></i> Vider le panier
                        </a>
                    </div>
                </div>
                
                {# Récapitulatif #}
                <div class="col-lg-4">
                    <div class="card border-0 shadow-sm sticky-top" style="top: 100px;">
                        <div class="card-header bg-success text-white py-3">
                            <h5 class="mb-0">
                                <i class="bi bi-calculator"></i> Récapitulatif
                            </h5>
                        </div>
                        <div class="card-body">
                            {# Détail des coûts #}
                            <div class="d-flex justify-content-between mb-2">
                                <span>Sous-total</span>
                                <span class="fw-semibold">{{ total|number_format(2, ',', ' ') }} €</span>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span>Livraison</span>
                                <span class="text-success fw-semibold">Offerte</span>
                            </div>
                            <hr>
                            <div class="d-flex justify-content-between mb-4">
                                <span class="h5 mb-0">Total</span>
                                <span class="h4 mb-0 text-success fw-bold">{{ total|number_format(2, ',', ' ') }} €</span>
                            </div>
                            
                            {# Bouton Commander #}
                            <button class="btn btn-success w-100 mb-3 py-3">
                                <i class="bi bi-check-circle"></i> Procéder au paiement
                            </button>
                            
                            {# Infos supplémentaires #}
                            <div class="text-center">
                                <small class="text-muted">
                                    <i class="bi bi-shield-check text-success"></i> Paiement 100% sécurisé
                                </small>
                            </div>
                            <div class="text-center mt-2">
                                <small class="text-muted">
                                    <i class="bi bi-truck text-success"></i> Livraison en 48h
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}
    </div>
</div>

{# Script pour gérer les boutons +/- de quantité #}
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Gérer les boutons de quantité
    document.querySelectorAll('.quantity-btn').forEach(button => {
        button.addEventListener('click', function() {
            const input = this.parentElement.querySelector('.quantity-input');
            const currentValue = parseInt(input.value);
            const max = parseInt(input.max);
            const action = this.dataset.action;
            
            if (action === 'increase' && currentValue < max) {
                input.value = currentValue + 1;
            } else if (action === 'decrease' && currentValue > 1) {
                input.value = currentValue - 1;
            }
            
            // Soumettre automatiquement le formulaire
            input.closest('form').submit();
        });
    });
});
</script>

<style>
    .cart-item {
        transition: background-color 0.2s;
    }
    
    .cart-item:hover {
        background-color: rgba(74, 124, 89, 0.03);
    }
    
    .quantity-input {
        border-left: none;
        border-right: none;
    }
    
    .quantity-btn {
        padding: 0.375rem 0.75rem;
    }
    
    @media (max-width: 767px) {
        .cart-item .row > div {
            margin-bottom: 0.5rem;
        }
    }
</style>
{% endblock %}


