{% extends 'themes/base.html.twig' %}

{% block title %}Mon compte{% endblock %}

{% block main %}
<div class="container mt-5">
    <div class="row justify-content-center"> 
        <!-- Colonne gauche avec les liens -->
        <div class="col-md-3 mb-4">
            <div class="list-group small shadow rounded">
                <a href="" class="list-group-item list-group-item-action">
                    üõí Panier
                </a>
                <a href="" class="list-group-item list-group-item-action">
                    üì¶ Historique de commandes
                </a>
                <a href="" class="list-group-item list-group-item-action">
                    ‚ù§Ô∏è Favoris
                </a>
            </div>
        </div>


        <!-- Colonne principale (profil + carnet d'adresse) -->
<div class="col-md-6">
    <!-- Profil -->
    <div class="card shadow rounded p-4 mt-4 position-relative">
        <a href="{{ path('app_edit_profile') }}" class="btn btn-sm btn-outline-primary position-absolute top-0 end-0 m-2">
            Modifier
        </a>
        <h2 class="mb-4">Mon profil</h2>
        <div class="d-flex align-items-center justify-content-start">
            <img src="{{ asset('build/images/user.png') }}" alt="Avatar" class="img-fluid rounded-circle" width="100">
            <div class="ms-2 text-start">
                <p class="mb-1"><strong>{{ app.user.firstName }} {{ app.user.lastName }}</strong></p>
                <p class="mb-0">{{ app.user.email }}</p>
            </div>
        </div>
    </div>

    <!-- Carnet d'adresse, structure identique -->
    <div class="card shadow rounded p-4 mt-4 position-relative">
        <a href="{{ path('app_user_address') }}" class="btn btn-sm btn-outline-primary position-absolute top-0 end-0 m-2">
            Modifier
        </a>
        <h2 class="mb-4">Carnet d'adresse</h2>
        <div class="d-flex align-items-center justify-content-start">
            <img src="{{ asset('build/images/carnet.png') }}" alt="Carnet" class="img-fluid rounded-circle bg-light border" width="100">
            <div class="ms-2 text-start">
                {% for address in app.user.addresses %}
                    <p class="mb-1 ">
                        <strong>Adresse&nbsp;:</strong>
                        {{ address.street|default('Non renseign√©e') }}, 
                        {{ address.addressComplement|default('') }}, 
                        {{ address.postalCode|default('') }} 
                        {{ address.city|default('') }}, 
                        {{ address.country|default('') }}
                    </p>
                {% else %}
                    <p>Aucune adresse enregistr√©e.</p>
                {% endfor %}
                <p class="mb-0">
                    <strong>T√©l√©phone&nbsp;:</strong> {{ app.user.phoneNumber|default('Non renseign√©') }}
                </p>
            </div>
        </div>
    </div>

    <div class="modal fade" id="deleteAccountModal" tabindex="-1">
  <div class="modal-dialog">
    <form method="post" action="{{ path('account_delete_request') }}">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Supprimer mon compte</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <p>Cette action est irr√©versible apr√®s 1 mois.</p>
          <input type="password" name="password" placeholder="Mot de passe" class="form-control" required>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
          <button type="submit" class="btn btn-danger">Demander suppression</button>
        </div>
      </div>
    </form>
  </div>
</div>

</div>
{% endblock %}