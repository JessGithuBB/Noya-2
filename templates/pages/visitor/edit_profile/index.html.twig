{% extends 'themes/base.html.twig' %}

{% block title %}Modifier mon profil{% endblock %}

{% block main %}
<br>
<br>

<div class="container mt-5">
    <h6>
        <img src="{{ asset('build/images/return.png') }}"
             alt="bouton retour"
             width="20"
             height="20">
        <a href="{{ path('app_profile') }}"> Retour à mon compte </a>
    </h6>

    <h2>Modifier mon profil</h2>
    <br>
        {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    <div class="col-md-6 mx-auto">
        {{ form_start(form) }}

        <div class="mb-3">
            {{ form_widget(form.firstName, {'attr': {'class': 'form-control mb-2', 'placeholder': 'Prénom'}}) }}
            {{ form_widget(form.lastName, {'attr': {'class': 'form-control mb-2', 'placeholder': 'Nom'}}) }}
            {{ form_widget(form.email, {'attr': {'class': 'form-control mb-4', 'placeholder': 'Email'}}) }}
            {{ form_widget(form.street, {'attr': {'class': 'form-control mb-2', 'placeholder': 'Rue'}}) }}
            {{ form_widget(form.addressComplement, {'attr': {'class': 'form-control mb-2', 'placeholder': 'Complément d\'adresse'}}) }}
            {{ form_widget(form.postalCode, {'attr': {'class': 'form-control mb-2', 'placeholder': 'Code postal'}}) }}
            {{ form_widget(form.city, {'attr': {'class': 'form-control mb-2', 'placeholder': 'Ville'}}) }}
            {{ form_widget(form.country, {'attr': {'class': 'form-control mb-2', 'placeholder': 'Pays'}}) }}
            {{ form_widget(form.phoneNumber, {'attr': {'class': 'form-control mb-2', 'placeholder': 'Téléphone'}}) }}
        </div>
        <div class="mb-3">
            {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}

        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
