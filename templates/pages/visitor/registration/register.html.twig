            {% extends "themes/base.html.twig" %}

            {% block title %}Inscription{% endblock %}

            {% block stylesheets %}

                 {{ parent() }}
                <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

                <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
                <link rel="preconnect" href="https://fonts.googleapis.com">
                <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
                <link href="https://fonts.googleapis.com/css2?family=Nunito:ital,wght@0,200..1000;1,200..1000&display=swap" rel="stylesheet">
                <link rel="icon" href="{{ asset('build/images/logo-noya.png') }}">
            {% endblock %}

            {% block meta %}
                <meta name="description" content="Inscrivez vous pour profiter de nos produits.">
                <meta name="robots" content="index, follow">    
                <meta name="author" content="Noya">    
                <meta name="publisher" content="Jessica">    
            {% endblock %}

            {% block main %}
                <div class="container d-flex justify-content-center align-items-center min-vh-100 mb-5">
                    <div class="bg-white p-4 p-md-5 shadow-sm" style="max-width: 400px; width: 100%;">

                         <h3> Créez votre compte</h3>
                         <h6> Vous avez déjà un compte? <a href="connexion">Connectez vous </a></h6>
                        <br>
                        <br>

                        <form method="post">
                        <div class="mb-3">
                            {{ form_widget(registrationForm.firstName, {
                            'attr': {
                                'placeholder': 'Prénom',
                                'class': 'form-control border-0 border-bottom border-dark rounded-0 px-0'
                            }
                            }) }}
                        </div>
                        <br>
                        <br>
                        <form method="post">
                        <div class="mb-3">
                            {{ form_widget(registrationForm.lastName, {
                            'attr': {
                                'placeholder': 'Nom',
                                'class': 'form-control border-0 border-bottom border-dark rounded-0 px-0'
                            }
                            }) }}
                        </div>
                        <br>
                        <br>
                        <form method="post">
                        <div class="mb-3">
                            {{ form_widget(registrationForm.email, {
                            'attr': {
                                'placeholder': 'Mot de passe',
                                'class': 'form-control border-0 border-bottom border-dark rounded-0 px-0'
                            }
                            }) }}
                        </div>
                        <br>
                        <br>
                        <form method="post">
                        <div class="mb-3">
                            {{ form_widget(registrationForm.password.first, {
                            'attr': {
                                'placeholder': 'Email',
                                'class': 'form-control border-0 border-bottom border-dark rounded-0 px-0'
                            }
                            }) }}
                        </div>
                        <br>
                        <br>
                        <form method="post">
                        <div class="mb-3">
                            {{ form_widget(registrationForm.password.second, {
                            'attr': {
                                'placeholder': 'Confirmation du mot de passe',
                                'class': 'form-control border-0 border-bottom border-dark rounded-0 px-0'
                            }
                            }) }}
                        </div>
                        <br>
                        <form method="post">
                        <div class="mb-3">
                            {{ form_widget(registrationForm.agreeTerms )}} <span> Lire et accepter <a href="">les conditons générales d'utilisation</a></span>
                        </div>
                        <br>
                        <button type="submit" class="button-register">S'inscrire</button>
                        </form>

                        <p class="mt-3 text-center text-muted small">
                        En cliquant sur "Inscrivez-vous, vous acceptez notre Politique de confidentialité et Conditions d'utilisation </p>
                    </div>
                </div>

            {% endblock %}

{#} {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}{#}