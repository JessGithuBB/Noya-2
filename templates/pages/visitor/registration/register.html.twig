{% extends "themes/base.html.twig" %}

{% block title %}Inscription{% endblock %}

{% block main %}
    <div class="container d-flex justify-content-center align-items-center min-vh-100 mb-5">
        <div class="bg-white p-4 p-md-5 shadow-sm" style="max-width: 400px; width: 100%;">
            <h3> Créez votre compte</h3>
            <h6> Vous avez déjà un compte? <a href="{{ path('app_login') }}">Connectez-vous</a></h6>
            <br><br>

            {{ form_start(registrationForm) }}

                <div class="mb-3">
                    {{ form_widget(registrationForm.firstName, {
                        'attr': {
                            'placeholder': 'Prénom',
                            'class': 'form-control border-0 border-bottom border-dark rounded-0 px-0'
                        }
                    }) }}
                </div>
                <br>
                <div class="mb-3">
                    {{ form_widget(registrationForm.lastName, {
                        'attr': {
                            'placeholder': 'Nom',
                            'class': 'form-control border-0 border-bottom border-dark rounded-0 px-0'
                        }
                    }) }}
                </div>
                <br>
                <div class="mb-3">
                    {{ form_widget(registrationForm.email, {
                        'attr': {
                            'placeholder': 'Email',
                            'class': 'form-control border-0 border-bottom border-dark rounded-0 px-0'
                        }
                    }) }}
                </div>
                <br>
                <div class="mb-3">
                    {{ form_widget(registrationForm.password.first, {
                        'attr': {
                            'placeholder': 'Mot de passe',
                            'class': 'form-control border-0 border-bottom border-dark rounded-0 px-0'
                        }
                    }) }}
                </div>
                <br>
                <div class="mb-3">
                    {{ form_widget(registrationForm.password.second, {
                        'attr': {
                            'placeholder': 'Confirmation du mot de passe',
                            'class': 'form-control border-0 border-bottom border-dark rounded-0 px-0'
                        }
                    }) }}
                </div>
                <br>
                <div class="mb-3 form-check">
                    {{ form_widget(registrationForm.agreeTerms) }} 
                    <label class="form-check-label" for="{{ registrationForm.agreeTerms.vars.id }}">
                        Lire et accepter <a href="#">les conditions générales d'utilisation</a>
                    </label>
                </div>
                <br>
                <button type="submit" class="button-register">S'inscrire</button>

            {{ form_end(registrationForm) }}

            <p class="mt-3 text-center text-muted small">
                En cliquant sur "S'inscrire", vous acceptez notre Politique de confidentialité et Conditions d'utilisation.
            </p>
        </div>
    </div>
{% endblock %}

