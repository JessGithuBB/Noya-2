{% extends "themes/base.html.twig" %}
{% block title %}Accueil{% endblock %}

    
{% block main %}
<div id="noyaCarousel" class="carousel slide mb-5" data-bs-ride="carousel">
  <div class="carousel-inner">

    <div class="carousel-item active">
      <img src="{{ asset('build/images/serum-marron.jpg') }}" class="d-block w-100 img-fluid" alt="Visuel 1">
    </div>

    <div class="carousel-item">
      <img src="{{ asset('build/images/clear-cream.jpg') }}" class="d-block w-100 img-fluid" alt="Visuel 2">
    </div>

    <div class="carousel-item">
      <img src="{{ asset('build/images/sunscreen.jpg') }}" class="d-block w-100 img-fluid" alt="Visuel 3">
    </div>

    <div class="carousel-item">
      <img src="{{ asset('build/images/tonic-blue.jpg') }}" class="d-block w-100 img-fluid" alt="Visuel 3">
    </div>

  </div>

  <!-- Contrôles -->
  <button class="carousel-control-prev" type="button" data-bs-target="#noyaCarousel" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Précédent</span>
  </button>

  <button class="carousel-control-next" type="button" data-bs-target="#noyaCarousel" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Suivant</span>
  </button>
</div>

{% for message in app.flashes('confirmation_email_sent') %}
    <div id="confirmation-popup" class="popup-validate">
        <div class="popup-content">
            <p>{{ message }}</p>
            <button onclick="closeConfirmationPopup()">Fermer</button>
        </div>
    </div>
{% endfor %}

{% for message in app.flashes('welcome') %}
    <div id="welcome-popup" class="popup-hi">
        <div class="popup-content">
            <p>{{ message }}</p>
            <button onclick="closeWelcomePopup()">Fermer</button>
        </div>
    </div>
{% endfor %}


{% endblock %}


