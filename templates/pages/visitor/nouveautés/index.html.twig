{% extends "themes/base.html.twig" %}
{% block title %}Nouveautés{% endblock %}
{% block description %}Liste des nouveautés{% endblock %}

{% block main %}
{{ parent() }}

<div class="nouveautes-page">
    {# Bannière d'en-tête #}
    <section class="page-header container-fluid py-5 mb-4" style="background: linear-gradient(135deg, #e8f5e9 0%, #c8e6c9 100%);">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h1 class="display-4 fw-bold text-dark mb-3">
                        <i class="bi bi-sparkles text-success me-2"></i> Nos Nouveautés
                    </h1>
                    <p class="lead text-muted">
                        Découvrez nos derniers produits fraîchement arrivés
                    </p>
                </div>
                <div class="col-md-4 text-center">
                    <img src="{{ asset('build/images/nos-nouveautés.png') }}" 
                         alt="Nouveautés" 
                         style="max-width: 150px;">
                </div>
            </div>
        </div>
    </section>

    {# Liste des articles #}
    <section class="articles-section container py-4">
        {% if articles is empty %}
            {# Message si aucune nouveauté #}
            <div class="alert alert-info text-center" role="alert">
                <i class="bi bi-info-circle fs-3 d-block mb-3"></i>
                <h4>Aucune nouveauté pour le moment</h4>
                <p>Nos nouveaux produits apparaîtront bientôt ici !</p>
                <a href="{{ path('app_visitor_welcome') }}" class="btn btn-primary mt-3">
                    <i class="bi bi-house"></i> Retour à l'accueil
                </a>
            </div>
        {% else %}
            {# Compteur d'articles - Version améliorée #}
            <div class="alert alert-success d-flex align-items-center mb-4" role="alert">
                <i class="bi bi-check-circle-fill fs-4 me-3"></i>
                <div class="flex-grow-1">
                    <h4 class="alert-heading mb-1">
                        <span class="badge bg-success fs-5 me-2">{{ articles|length }}</span>
                        {{ articles|length > 1 ? 'Nouveaux produits disponibles' : 'Nouveau produit disponible' }}
                    </h4>
                    <p class="mb-0 small">
                        Découvrez notre sélection de produits fraîchement ajoutés
                    </p>
                </div>
            </div>

            {# Grille de produits #}
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
                {% for article in articles %}
                    <div class="col">
                        {% include 'components/product_card.html.twig' with {'article': article} %}
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </section>
</div>
{% endblock %}
