{% extends "themes/base_admin.html.twig" %}

{% block title %} Nouvelle sous-catégorie{% endblock %}
{% block description %} Nouvelle sous-catégorie{% endblock %}

{% block main %}
<h1 class="text-center my-3 display-5">Nouvelle sous-catégorie</h1>

<div>
    <img src="{{ asset('build/images/annuler.png') }}" alt="retour" width="20" height="20">
    <h6>
        <a href="{{ path('app_admin_category_ss_category') }}">Revenir à sous-catégorie</a>
    </h6>
</div>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 mx-auto">

            {{ form_start(form) }}
                <div class="mb-3">
                    <div class="text-danger">{{ form_errors(form.name) }}</div>
                    {{ form_widget(form.name, {'attr': {'placeholder': 'Nom', 'class': 'form-control'}}) }}
                </div>
                

                <div class="mb-3">
                    <label for="{{ form.category.vars.id }}" class="form-label fw-semibold text-black">
                        Catégorie parente
                    </label>
                    <div class="text-danger">{{ form_errors(form['category']) }}</div>
                    {{ form_widget(form['category'], {
                        'attr': {
                            'class': 'form-select'
                        }
                    }) }}

                <div class="mt-3">
                    <input type="submit" class="btn btn-primary">
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
