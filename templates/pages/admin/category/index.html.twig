{% extends "themes/base_admin.html.twig" %}

{% block title %} Liste des categories{% endblock %}
{% block description %}Liste des categories{% endblock %}

{% block main %}
    <h1 class="text-center my-3 display-5">Liste des catégories</h1>

     {#} Utilisation alert/twig {#}
    {% include 'components/alert.html.twig' %}

<div class="position-relative">
    <a href="{{ path('app_admin_category_create') }}" class="btn btn-sm btn-outline-primary position-absolute top-0 end-0 m-2 text-black">
        <img src="{{ asset('build/images/plusieurs.png') }}"
             alt="ajouter"
             width="20"
             height="20"> Nouvelle catégorie
    </a>
</div>

<div class="table-responsive text-primary  " style="margin-top: 100px;">
    <table class="table table-striped table-hover table-bordered text-center">
        <thead class="table-custom">
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Slug</th>
                <th>Créé le</th>
                <th>Modifié le</th>
                <th>Options</th>
            </tr>
        </thead>
        <tbody>
            {% for category in categories %}
                <tr>
                    <td>{{ category.id }}</td>
                    <td>{{ category.name }}</td>
                    <td>{{ category.slug }}</td>
                    <td>{{ category.createdAt ? category.createdAt|date('d/m/Y H:i') : '' }}</td>
                    <td>{{ category.updatedAt ? category.updatedAt|date('d/m/Y H:i') : '' }}</td>
                        <td>
                         <a href="{{ path('app_admin_category_edit', {'id': category.id}) }}" class="btn btn-sm btn-secondary">Modifier</a>
                         <form class="d-inline" action="{{ path('app_admin_category_delete', {'id': category.id}) }}" method="post">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete-category-' ~ category.id) }}">

                            <input type="submit" class="btn btn-sm btn-danger" value="Supprimer" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette catégorie ?');">
                         </form>
                        </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

{% endblock %}