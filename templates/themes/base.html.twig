<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}Noya{% endblock %}</title>

        {# SEO #}
        <meta name="description" content="{% block description %}{% endblock %}">
        <meta name="robots" content="index, follow">    
        <meta name="author" content="Noya">    
        <meta name="publisher" content=" Jessica">    

        {# Google font #}
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Nunito:ital,wght@0,200..1000;1,200..1000&display=swap" rel="stylesheet">
       
        {# Favicon #}
        <link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <link rel="shortcut icon" href="/favicon.ico" />
        <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
        <link rel="manifest" href="/site.webmanifest" />
        <meta name="theme-color" content="#712cf9">

        {# Logo #}
        <link rel="icon" href="{{ asset('build/images/logo-noya.png') }}">
      
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <!-- Bannière promo -->
        <div class="promo-banner fixed-top bg-primary text-black text-center p-2" style="z-index: 1028;">
            <div class="promo-slider">
                <div class="promo-slide">Livraison gratuite à partir de 30 € d'achat</div>
                <div class="promo-slide">Paiement sécurisé</div>
                <div class="promo-slide">Satisfait ou remboursé</div>
                <div class="promo-slide">Service client disponible</div>
            </div>
        </div>

        <!-- DOUBLE NAVBAR - STYLE THE ORDINARY -->
        
        <!-- Header Secondaire - Logo + Recherche + Actions -->
        <div class="navbar-secondary sticky-top">
            <div class="container-fluid">
                <div class="d-flex align-items-center justify-content-between">
                    
                    <!-- Gauche : Logo Noya + Recherche extensible -->
                    <div class="d-flex align-items-center gap-4">
                        <a class="navbar-brand-secondary" href="{{ path('app_visitor_welcome') }}">
                            <img src="{{ asset('build/images/n-logo.png') }}" alt="Noya" class="logo-secondary">
                        </a>
                        
                        <!-- Recherche extensible -->
                        <div class="search-container">
                            <div class="search-wrapper">
                                <form action="{{ path('ajax_search') }}" method="get" class="search-form">
                                    <input type="text" name="q" class="search-input" placeholder="Rechercher..." autocomplete="off">
                                    <button type="submit" class="search-btn">
                                        <i class="bi bi-search"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Droite : User + Panier -->
                    <div class="d-flex align-items-center gap-3">
                        <!-- Admin si connecté -->
                        {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('app_admin_home') }}" class="action-btn admin-btn">
                            <i class="bi bi-gear"></i>
                        </a>
                        {% endif %}
                        
                        <!-- Utilisateur -->
                        {% if app.user %}
                        <div class="dropdown">
                            <a href="#" class="action-btn user-btn dropdown-toggle" data-bs-toggle="dropdown">
                                <img src="{{ asset('build/images/user.png') }}" alt="User" class="user-icon">
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="{{ path('app_profile') }}">Mon compte</a></li>
                                <li><a class="dropdown-item" href="#">Mes commandes</a></li>
                                <li><a class="dropdown-item" href="#">Favoris</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item text-danger" href="{{ path('app_logout') }}">Déconnexion</a></li>
                            </ul>
                        </div>
                        {% else %}
                        <a href="{{ path('app_login') }}" class="action-btn user-btn">
                            <img src="{{ asset('build/images/user.png') }}" alt="User" class="user-icon">
                        </a>
                        {% endif %}
                        
                        <!-- Panier -->
                        <a href="{{ path('app_cart_index') }}" class="action-btn cart-btn">
                            <img src="{{ asset('build/images/panier.png') }}" alt="Panier" class="cart-icon">
                            <span class="cart-badge" id="cart-count-desktop">{{ cart_count }}</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Header Principal - Navigation des Catégories -->
        <nav class="navbar-primary sticky-top">
            <div class="container-fluid">
                
                <!-- MOBILE LAYOUT -->
                <div class="d-flex align-items-center justify-content-between w-100 d-lg-none">
                    <!-- Menu hamburger -->
                    <button class="navbar-toggler mobile-toggle" type="button" data-bs-toggle="collapse" data-bs-target="#mobileMenu">
                        <span class="hamburger-line"></span>
                        <span class="hamburger-line"></span>
                        <span class="hamburger-line"></span>
                    </button>
                    
                    <!-- Logo mobile -->
                    <a class="navbar-brand-mobile" href="{{ path('app_visitor_welcome') }}">
                        <img src="{{ asset('build/images/n-logo.png') }}" alt="Noya" class="logo-mobile">
                    </a>
                    
                    <!-- Actions mobiles -->
                    <div class="d-flex align-items-center gap-3">
                        <button class="action-btn-mobile" type="button" data-bs-toggle="collapse" data-bs-target="#mobileSearch">
                            <i class="bi bi-search"></i>
                        </button>
                        <a href="{{ path('app_cart_index') }}" class="action-btn-mobile">
                            <img src="{{ asset('build/images/panier.png') }}" alt="Panier" class="cart-icon-mobile">
                            <span class="cart-badge-mobile" id="cart-count-mobile">{{ cart_count }}</span>
                        </a>
                    </div>
                </div>
                
                <!-- Recherche mobile -->
                <div class="collapse mt-3 d-lg-none" id="mobileSearch">
                    <form action="{{ path('ajax_search') }}" method="get" class="d-flex">
                        <input type="text" name="q" class="form-control search-mobile" placeholder="Rechercher...">
                        <button type="submit" class="btn btn-outline-success ms-2">
                            <i class="bi bi-search"></i>
                        </button>
                    </form>
                </div>
                
                <!-- Menu mobile -->
                <div class="collapse navbar-collapse mt-3 d-lg-none" id="mobileMenu">
                    <ul class="navbar-nav-mobile">
                        {% include 'components/_nav_links_mobile.html.twig' %}
                    </ul>
                </div>
                
                <!-- DESKTOP LAYOUT -->
                <div class="d-none d-lg-flex w-100 align-items-center justify-content-center">
                    <ul class="navbar-nav-primary">
                        {% include 'components/_nav_links_desktop.html.twig' %}
                    </ul>
                </div>
            </div>
        </nav>

        <main style="padding-top: 80px;">
            {% block main %}

            {% for message in app.flashes('confirmation_email_sent') %}
            <div class="popup popup-validate">
                <div class="popup-content">
                    <p>{{ message }}</p>
                    <button class="close-popup">Fermer</button>
                </div>
            </div>
            {% endfor %}

            {% for message in app.flashes('success') %}
            <div class="popup popup-success">
                <div class="popup-content">
                    <p>{{ message }}</p>
                    <button class="close-popup">Fermer</button>
                </div>
            </div>
            {% endfor %}

            {% for message in app.flashes('welcome') %}
            <div class="popup popup-hi">
                <div class="popup-content">
                    <p>{{ message }}</p>
                    <button class="close-popup">Fermer</button>
                </div>
            </div>
            {% endfor %}

            {% endblock %}
        </main>


        {# Footer #}
<footer class="footer py-5">
    <div class="container">

        <!-- Cadre autour des icônes -->
        <div class="row justify-content-center mt-4">
            <div class="col-12 col-md-auto">
                <div class="d-flex justify-content-center p-3 border rounded flex-wrap services-container" style="border-color: #ddd; gap: 60px; background-color: #f8f9fa;">

                    <!-- Card 1 - Paiement sécurisé -->
                    <div class="d-flex flex-column align-items-center mb-3">
                        <div class="service-icon-container">
                            <i class="bi bi-shield-check service-icon"></i>
                        </div>
                        <h6 class="mt-2 text-center">Paiement sécurisé</h6>
                    </div>

                    <!-- Card 2 - Livraison rapide -->
                    <div class="d-flex flex-column align-items-center mb-3">
                        <div class="service-icon-container">
                            <i class="bi bi-truck service-icon"></i>
                        </div>
                        <h6 class="mt-2 text-center">Livraison rapide</h6>
                    </div>

                    <!-- Card 3 - Satisfait ou remboursé -->
                    <div class="d-flex flex-column align-items-center mb-3">
                        <div class="service-icon-container">
                            <i class="bi bi-arrow-repeat service-icon"></i>
                        </div>
                        <h6 class="mt-2 text-center">Satisfait ou remboursé</h6>
                    </div>

                    <!-- Card 4 - Support client -->
                    <div class="d-flex flex-column align-items-center mb-3">
                        <div class="service-icon-container">
                            <i class="bi bi-headset service-icon"></i>
                        </div>
                        <h6 class="mt-2 text-center">Support client</h6>
                    </div>
                </div>
            </div>
        </div>

        <!-- Trait de séparation -->
        <div class="row mt-4">
            <div class="col-12">
                <hr style="border-top: 1px solid #6e6a6aff;">
            </div>
        </div>

        <!-- Sections info + newsletter -->
        <div class="row text-center text-md-start mt-5 mb-5">

            <!-- Logo -->
            <div class="col-12 col-md-2 mb-4 mb-md-0">
                <a href="{{ path('app_visitor_welcome') }}">
                    <img src="{{ asset('build/images/new-noya2.png') }}" alt="Logo Noya" width="110" height="80">
                </a>
            </div>

            <!-- Navigation -->
            <div class="col-12 col-md-10">
                <div class="row justify-content-center">

                    <!-- À propos -->
                    <div class="col-6 col-lg-4 mb-5">
                        <div class="fw-bold fs-5">À propos</div>
                        <ul class="nav flex-column">
                            <li class="nav-item"><a class="nav-link p-0 text-dark" href="{{path('app_visitor_about_us')}}">Qui sommes-nous</a></li>
                            <li class="nav-item"><a class="nav-link p-0 text-dark" href="#">La Qualité Noya</a></li>
                            <li class="nav-item"><a class="nav-link p-0 text-dark" href="#">Fiches produits</a></li>
                        </ul>
                    </div>

                    <!-- Aide et support -->
                    <div class="col-6 col-lg-4 mb-5">
                        <div class="fw-bold fs-5">Aide et support</div>
                        <ul class="nav flex-column">
                            <li class="nav-item"><a class="nav-link p-0 text-dark" href="{{path('app_visitor_contact-us')}}">Service client</a></li>
                            <li class="nav-item"><a class="nav-link p-0 text-dark" href="#">Paiement sécurisé</a></li>
                            <li class="nav-item"><a class="nav-link p-0 text-dark" href="#">Frais de port</a></li>
                            <li class="nav-item"><a class="nav-link p-0 text-dark" href="#">FAQ</a></li>
                        </ul>
                    </div>

                    <!-- Informations légales -->
                    <div class="col-12 col-lg-4 mb-5">
                        <div class="fw-bold fs-5">Informations</div>
                        <ul class="nav flex-column">
                            <li class="nav-item"><a class="nav-link p-0 text-dark" href="#">Mentions légales</a></li>
                            <li class="nav-item"><a class="nav-link p-0 text-dark" href="#">Politiques Cookies</a></li>
                            <li class="nav-item"><a class="nav-link p-0 text-dark" href="#">Conditions générales</a></li>
                        </ul>
                    </div>
                </div>
            </div>
                          <div class="row mt-5 justify-content-center">
                  <div class="col-12 col-md-6 text-center">
                      <h2 class="mb-4">Inscrivez-vous à notre newsletter</h2>
                      <form class="d-flex justify-content-center flex-wrap" action="#" method="POST">
                          <input type="email" name="email" class="form-control me-2 mb-2" placeholder="Votre email" required style="max-width: 300px;">
                          <button type="submit" class="btn btn-primary mb-2">S'inscrire</button>
                      </form>
                      <small class="text-muted d-block mt-3">Recevez nos offres et nouveautés directement dans votre boîte mail.</small>
                  </div>
              </div>

                      <!-- Social media -->
            <div class="row justify-content-center mt-4">
              <div class="col-12 text-center">
                <h6 class="mb-3">Suivez-nous sur :</h6>

                <div class="d-flex justify-content-center flex-wrap gap-3">
                  <!-- Facebook -->
                  <div class="social-icon-container">
                    <i class="bi bi-facebook social-icon"></i>
                  </div>

                  <!-- Instagram -->
                  <div class="social-icon-container">
                    <i class="bi bi-instagram social-icon"></i>
                  </div>

                  <!-- TikTok -->
                  <div class="social-icon-container">
                    <i class="bi bi-tiktok social-icon"></i>
                  </div>

                  <!-- Pinterest -->
                  <div class="social-icon-container">
                    <i class="bi bi-pinterest social-icon"></i>
                  </div>
                </div>
              </div>
            </div>

           <div class="container my-5">
  <div class="d-flex justify-content-center flex-wrap gap-5 payment-icons">
    <!-- Visa -->
    <div class="payment-icon-container">
      <i class="bi bi-credit-card payment-icon visa-icon"></i>
      <span class="payment-label">Visa</span>
    </div>

    <!-- Mastercard -->
    <div class="payment-icon-container">
      <i class="bi bi-credit-card-2-front payment-icon mastercard-icon"></i>
      <span class="payment-label">Mastercard</span>
    </div>

    <!-- PayPal -->
    <div class="payment-icon-container">
      <i class="bi bi-paypal payment-icon paypal-icon"></i>
      <span class="payment-label">PayPal</span>
    </div>

    <!-- Apple Pay -->
    <div class="payment-icon-container">
      <i class="bi bi-apple payment-icon apple-icon"></i>
      <span class="payment-label">Apple Pay</span>
    </div>

    <!-- Google Pay -->
    <div class="payment-icon-container">
      <i class="bi bi-google payment-icon google-icon"></i>
      <span class="payment-label">Google Pay</span>
    </div>

    <!-- Tether -->
    <div class="payment-icon-container">
      <i class="bi bi-currency-bitcoin payment-icon crypto-icon"></i>
      <span class="payment-label">Tether</span>
    </div>

    <!-- Ethereum -->
    <div class="payment-icon-container">
      <i class="bi bi-currency-bitcoin payment-icon crypto-icon"></i>
      <span class="payment-label">Ethereum</span>
    </div>
  </div>
</div>


</footer>





    </body>
</html>
