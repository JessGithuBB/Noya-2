            <script>
                // Données des ventes par mois
                const data = {
                    labels: ['Mai', 'Juin', 'Juillet'], // Noms des mois
                    datasets: [{
                        label: 'Total des ventes',
                        data: [152, 500, 1200], // Totaux des ventes par mois
                        backgroundColor: [
                            'rgba(75, 192, 192, 0.2)', 
                            'rgba(255, 206, 86, 0.2)', 
                            'rgba(255, 99, 132, 0.2)'
                        ],
                        borderColor: [
                            'rgba(75, 192, 192, 1)', 
                            'rgba(255, 206, 86, 1)', 
                            'rgba(255, 99, 132, 1)'
                        ],
                        borderWidth: 1
                    }]
                };

                // Configuration du graphique
                const config = {
                    type: 'bar', // Type de graphique (ici, un histogramme)
                    data: data,
                    options: {
                        scales: {
                            y: {
                                beginAtZero: true // Commencer l’axe Y à 0
                            }
                        }
                    }
                };

                // Création et affichage du graphique
                new Chart(
                    document.getElementById('ventesChart'),
                    config
                );
                    </script>
